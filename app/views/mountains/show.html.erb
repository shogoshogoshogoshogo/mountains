<h1><%= @mountain.name %></h1>
<p><strong>Height:</strong> <%= @mountain.height %>m</p>
<p><strong>Location:</strong> <%= @mountain.location %></p>
<p><strong>Date Climbed:</strong> <%= @mountain.date_climbed %></p>
<p><strong>Difficulty:</strong> <%= @mountain.difficulty.name %></p>
<p><strong>Description:</strong> <%= @mountain.description %></p>

<h2>Comments</h2>
<ul>
  <% @mountain.comments.each do |comment| %>
    <li><%= comment.content %> - <%= comment.user.name %></li>
  <% end %>
</ul>

<h3>Add a Comment</h3>
<%= form_with model: [@mountain, Comment.new], local: true do |f| %>
  <div>
    <%= f.label :content %>
    <%= f.text_area :content, rows: 3 %>
  </div>
  <%= f.submit "Post Comment" %>
<% end %>